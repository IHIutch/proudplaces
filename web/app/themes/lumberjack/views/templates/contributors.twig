{% extends "base.twig" %}

{% block content %}
<main class="container">
    <div class="row">
        {% for contributor in contributors %}
        <div class="col-4">
            <div class="mb-4">
                {% if contributor.image %}
                <div class="mb-2">
                    <div class="embed-responsive embed-responsive-1by1">
                        <img class="embed-responsive-item" src="{{contributor.image.url}}" />
                    </div>
                </div>
                {% endif %}
                <h3>
                    <span>{{contributor.title}}</span>
                    {% if contributor.attribution %}
                    <span class="mx-1">-</span>
                    <span>
                        {{contributor.attribution}}
                    </span>
                    {% endif %}
                </h3>
                <div>
                    <span class="font-weight-bold small" href="{{contributor.caption}}">{{contributor.caption}}</span>
                </div>
                <div>
                    {{contributor.description}}
                </div>
                <div class="d-flex">
                    {% set social_media = contributor.meta('social_media') %}
                    {% if social_media.facebook %}
                    <div class="mr-2">
                        <a href="{{social_media.facebook}}">F</a>
                    </div>
                    {% endif %}
                    {% if social_media.twitter %}
                    <div class="mr-2">
                        <a href="{{social_media.twitter}}">T</a>
                    </div>
                    {% endif %}
                    {% if social_media.linkedin %}
                    <div class="mr-2">
                        <a href="{{social_media.linkedin}}">L</a>
                    </div>
                    {% endif %}
                    {% if social_media.instagram %}
                    <div class="mr-2">
                        <a href="{{social_media.instagram}}">I</a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</main>
{% endblock %}
